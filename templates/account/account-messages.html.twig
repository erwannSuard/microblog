{% extends 'base.html.twig' %}

{% block title %}{{ user.username }} message box{% endblock %}

{% block body %}
<a href="{{ path('account')}}"><button>Back on your Profile</button> </a>

<table>
    <thead>
        <tr>
            <th colspan="3"><h1>{{ user.username }} message box</h1></th>
        </tr>
    </thead>
    <tbody>
    
        <tr>
            <td>Received On</td>
            <td>Sender</td>
            <td>Subject</td>
        </tr>

        {% for message in messages %}
            <tr>
                <td><h3>{{message.createdAt|format_datetime('medium', 'short')}}</h3></td>
                <td>
                    <a href="{{ path('blog', {username: message.author}) }}"><p>{{message.author}}</p></a>
                </td>
                <td><a href="{{ path('account-message-page', {slug: message.slug}) }}"><p>{{message.title}}</p></a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>

    
{% endblock %}