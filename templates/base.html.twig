<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>


    <style>
    p{
        font: 1.2em "Fira Sans", sans-serif;
    }

    a{
        color:#0b0317;
        text-decoration: none;
        font: small-caps bold 24px/1 sans-serif;
    }
    /* unvisited link */
    {# a:link {
        color: black;
    }

    /* visited link */
    a:visited {
        color: black;
    } #}

    /* mouse over link */
    a:hover {
        color: #2f3030;
    }

    {# /* selected link */
    a:active {
        color: black;
    } #}
    
    </style>



    <a href="{{path('homepage')}}"><h1>MicroBlog</h1></a>
    {% if is_granted('ROLE_USER') %}
    <a href="{{path('logout')}}">LOGOUT</a>
    <br>
    <a href="{{path('account')}}">Personnal Account</a>
    <br>
    <a href="{{path('article')}}">Write an article</a>
    <br>
    <a href="{{path('journal')}}">Journal</a>
    
    {% elseif not is_granted('ROLE_USER') %}
        <a href="{{path('register')}}">Register</a>
        <br>
        <a href="{{path('login')}}">Log in</a>
    {% endif %}
    <hr>
        {% block body %}{% endblock %}
    </body>
</html>
